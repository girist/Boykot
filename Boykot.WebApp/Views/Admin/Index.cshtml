@{
    ViewData["Title"] = "Yonetim - Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-primary" style="text-align:center;">
    <strong>Yönetim Giriş Ekranı </strong>
</div>
<hr />

<form asp-action="Index" enctype="multipart/form-data" method="POST">
    <div class="form-row">
        <div class="form-group col-md-12">
            <label>Kullanıcı Adı</label>
            <input type="text" class="form-control" name="username" id="username" placeholder="Kullanıcı Adı" required>
        </div>
        <div class="form-group col-md-12">
            <label for="">Şifre</label>
            <input type="password" class="form-control" name="password" id="password" placeholder="Şifre">
        </div>
        <div class="form-group text-left">
            <input type="submit" class="btn btn-primary form-control" value="Giriş" />
        </div>
    </div>
</form>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Message");
        };
    </script>
}

